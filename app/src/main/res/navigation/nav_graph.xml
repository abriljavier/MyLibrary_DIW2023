<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/firstFragment">

    <fragment
        android:id="@+id/firstFragment"
        android:name="com.example.mylibrary.ShowFragment"
        android:label="My Books"
        tools:layout="@layout/see_layout" />

    <fragment
        android:id="@+id/secondFragment"
        android:name="com.example.mylibrary.AddFragment"
        android:label="Add a book"
        tools:layout="@layout/add_row_layout" />

    <fragment
        android:id="@+id/thirdFragment"
        android:name="com.example.mylibrary.EditFragment"
        android:label="Edit one book"
        tools:layout="@layout/edit_row_layout" />

    <fragment
        android:id="@+id/fourthFragment"
        android:name="com.example.mylibrary.DeleteFragment"
        android:label="Delete a book"
        tools:layout="@layout/delete_row_layout" />

    <fragment
        android:id="@+id/fifthFragment"
        android:name="com.example.mylibrary.SearchFragment"
        android:label="Find one book by title"
        tools:layout="@layout/search_layout" />
</navigation>